<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:layout_marginBottom="@dimen/row_spacing"
    android:gravity="center"
    android:background="@color/colorTask"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/row_task_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurze"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/row_task_points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 points"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <CheckBox
        android:id="@+id/row_task_completed_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>